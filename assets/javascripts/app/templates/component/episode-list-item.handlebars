<li {{bind-attr class=":audio episode.listened episode.playing"}} {{bind-attr data-id=episode.id}} {{bind-attr data-source_url=episode.source_url}}>
  {{play-pause-button episode=episode}}
  <div class="title uk-animation-fade">
    <span>
      {{episode.title}}
    </span>
    <div>
      <button {{bind-attr data-id=episode.id}} data-uk-tooltip="{pos:'bottom'}" title="{{t "episode.button.listened"}}" {{bind-attr class=":typcn :listened episode.listened:typcn-tick:typcn-tick-outline"}}>
      </button>
      <button data-uk-tooltip="{pos:'bottom'}" title="{{t "episode.button.info"}}" class="more-info typcn typcn-info-large"> </button>
      <button {{bind-attr data-id=episode.id}} data-uk-tooltip="{pos:'bottom'}" title="{{t "episode.button.download"}}" class="typcn typcn-download download">
    </div>
  </div>
  <div class="description">
    {{{episode.description}}}
  </div>
</li>
