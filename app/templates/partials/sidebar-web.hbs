<div id="aside-wrapper" class="uk-float-left uk-animation-fade uk-width-3-10 uk-hidden-small uk-hidden-medium">
  <aside class="uk-width-3-10">
    <header>
      <hgroup>
        {{#link-to 'index'}}
          <h1>Uhura</h1>
          <h2>Podcast Manager</h2>
        {{/link-to}}
      </hgroup>
    </header>

    <ul class="uk-animation-fade">
      <li>
        {{#link-to 'channels' }}
          <span class="typcn typcn-document-add"></span>{{t "sidebar.channels"}}
        {{/link-to}}
      </li>
      {{#if session.isAuthenticated}}
      <li>
        {{#link-to 'users.settings' }}
          <span class="typcn typcn-cog-outline"></span>{{t "sidebar.settings"}}
        {{/link-to}}
      </li>
      {{/if}}
      <li>
      {{#if session.isAuthenticated}}
        <a {{ action 'invalidateSession' }}>
           <span class="typcn typcn-power-outline"></span>{{t "sidebar.sign_out"}}
        </a>
      {{else}}
        {{#link-to 'login' }}
          <span class="typcn typcn-power-outline"></span>{{t "sidebar.sign_in"}}
        {{/link-to}}
      {{/if}}
      </li>
    </ul>

    {{subscriptions-sidebar subscriptions=model}}
  </aside>
</div>
