    <i class="typcn typcn-tick-outline"></i>
    {{t 'views.channel.mark_all_as_listened'}}
  </button>
  {{/if}}

  {{#if removeListenedButton}}
  <label class="uk-width-1-1 uk-text-right ">
    {{input type="checkbox" name="removeListened" checked=removeListened}}
    {{t 'views.channel.remove_listened'}}
  </label>
  {{/if}}
-->

  <div class="uk-width-1-1 episodes-list">
    {{episodes-list episodesFiltered=episodesFiltered episodes=model.episodes store=store channel=model}}
  </div>

  <div class="footer">
    {{model.copyrigth}}
  </div>
</div>

{{outlet}}
