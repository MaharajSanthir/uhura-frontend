<div class="loading">
  Loading
  <img style="display:block; margin: 15% auto" src="/assets/loading.gif" />
</div>

<div id="profile">
  <div class="channel-information">
    {{subscribe-button channel=model}}

    <img class="channel-img" data-adaptive-background='1' data-layzr="{{model.imageURL}}" data-fallback="assets/channel-placeholder.png" src="assets/channel-placeholder-loading.jpg" />

    <div class="about">
      <h1>{{model.title}}</h1>
      <div class="description">{{model.description}}</div>
    </div>
  </div>

  <h2 class="uk-width-small-5-10 uk-width-medium-7-10">{{t 'titles.episodes'}}</h2>

  <div class="uk-width-1-1 episodes-list">
    {{episodes-list episodes=model.episodes store=store channel=model}}
  </div>

  <div class="footer">
    {{model.copyrigth}}
  </div>
</div>
